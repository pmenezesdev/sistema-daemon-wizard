<div class="step-content step-5-pericias">
    <h2 class="step-title">{{localize "DAEMON_WIZARD.Steps.Pericias"}}</h2>
    <p class="step-description">
        {{localize "DAEMON_WIZARD.Pericias.DescriptionManual"}}
    </p>

    <div class="points-tracker">
        <h3>{{localize "DAEMON_WIZARD.Pericias.PointsTitle"}}</h3>
        <div class="points-display {{#if (lt periciaPoints.remaining 0)}}overspent{{/if}}">
            <span>{{periciaPoints.remaining}}</span> / {{periciaPoints.total}}
        </div>
    </div>

    {{!-- Lista de perícias do personagem --}}
    <div class="character-pericias-list">
        <div class="list-header">
            <span class="pericia-name">Perícia</span>
            <span class="pericia-attr">Atributo</span>
            <span class="pericia-gasto">Pontos Gastos</span>
            <span class="pericia-total">Valor Final</span>
            <span class="pericia-actions">Ações</span>
        </div>
        <ul>
            {{#each wizardData.pericias as |pericia index|}}
            <li class="pericia-row">
                <span class="pericia-name">{{pericia.name}}</span>
                <span class="pericia-attr">{{#if pericia.attribute}}{{upcase pericia.attribute}}{{else}}N/A{{/if}}</span>
                {{!-- A Perícia Briga tem dois campos de gasto --}}
                {{#if (eq pericia.name "Briga")}}
                    <div class="briga-inputs">
                        <input class="pericia-gasto" type="number" data-index="{{index}}" data-field="gasto_atk" value="{{pericia.gasto_atk}}" min="0" placeholder="Atk">
                        <input class="pericia-gasto" type="number" data-index="{{index}}" data-field="gasto_def" value="{{pericia.gasto_def}}" min="0" placeholder="Def">
                    </div>
                {{else}}
                    <input class="pericia-gasto" type="number" data-index="{{index}}" data-field="gasto" value="{{pericia.gasto}}" min="10">
                {{/if}}
                <span class="pericia-total">{{pericia.total}}%</span>
                <span class="pericia-actions">
                    {{#unless (eq pericia.name "Briga")}}
                    <a class="remove-pericia" data-index="{{index}}"><i class="fas fa-trash"></i></a>
                    {{/unless}}
                </span>
            </li>
            {{/each}}
        </ul>
    </div>

    {{!-- Seção para adicionar novas perícias --}}
    <div class="manual-add-pericia">
        <h4>Adicionar Nova Perícia</h4>
        <input type="text" id="pericia-name" placeholder="Nome da Perícia">
        <select id="pericia-attribute">
            <option value="">Sem Atributo Base</option>
            <option value="fr">Força (FR)</option>
            <option value="con">Constituição (CON)</option>
            <option value="dex">Destreza (DEX)</option>
            <option value="agi">Agilidade (AGI)</option>
            <option value="int">Inteligência (INT)</option>
            <option value="will">F. de Vontade (WILL)</option>
            <option value="per">Percepção (PER)</option>
            <option value="car">Carisma (CAR)</option>
        </select>
        <input type="number" id="pericia-gasto" placeholder="Pontos (mín. 10)" min="10" value="10">
        <button type="button" class="add-pericia"><i class="fas fa-plus"></i> Adicionar</button>
    </div>
</div>
